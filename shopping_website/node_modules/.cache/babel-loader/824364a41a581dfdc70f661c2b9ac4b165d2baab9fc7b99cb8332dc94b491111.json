riginal_price, props.product.discount) : props.product.original_price;\n\n        // 准备购物车数据\n        const cartItem = {\n          user_id: userId,\n          product_id: props.product.id,\n          quantity: quantity.value,\n          price_at_add: actualPrice\n        };\n\n        // 发送到后端API\n        const response = await axios.post('/cart', cartItem);\n        if (response.data.status === 'success') {\n          // 添加成功后发出事件（如果需要）\n          emit('add-to-cart', {\n            ...props.product,\n            quantity: quantity.value,\n            actualPrice\n          });\n          alert('商品已成功添加到购物车！');\n        } else {\n          throw new Error(response.data.message);\n        }\n      } catch (error) {\n        console.error('添加到购物车失败:', error);\n        alert(`添加到购物车失败: ${error.message || '请稍后再试'}`);\n      }\n    }\n    const __returned__ = {\n      props,\n      quantity,\n      emit,\n      calculateDiscountPrice,\n      getStarIcon,\n      increment,\n      decrement,\n      addToCart,\n      ref,\n      get axios() {\n        return axios;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","axios","props","__props","quantity","emit","__emit","calculateDiscountPrice","originalPrice","discount","toFixed","getStarIcon","index","rating","product","Math","floor","ceil","increment","value","min","stock","decrement","addToCart","userJson","localStorage","getItem","alert","user","JSON","parse","user_name","userRes","get","foundUser","data","find","u","userId","user_id","actualPrice","original_price","cartItem","product_id","id","price_at_add","response","post","status","Error","message","error","console"],"sources":["D:/计算机/谭/shopping_website/src/components/common/ProductCard.vue"],"sourcesContent":["<template>\r\n  <div class=\"product-card\">\r\n    <div\r\n        class=\"product-badge\"\r\n        v-if